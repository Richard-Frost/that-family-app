  
<div class="child">
  <div class="name">
    <h3>Reset Password</h3>
  </div>
  <div class="inner-content">
    <%= form_tag password_resets_path, :method => :post do %>
      <div class="field">
        <%= label_tag :email %></br>
        <%= text_field_tag :email, params[:email], class: 'form-control'  %>
      </div>
      <div class="actions"><%= submit_tag "Reset Password"%>
    <% end %>
  </div>
</div>
