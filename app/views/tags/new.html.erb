<div class="child">
  <div class="name">
    <h3>Create a new play date: </h3>
  </div>
  <div class="container-fluid">
<%= form_for [@family, @tag] do |f| %>
  <%= f.label :tag_name %></br>
  <%= f.text_field :name, class: 'form-control' %></br>
  <%= f.fields_for :family_tags, @familytag do |fam| %>
   <%= fam.hidden_field :family_id, value: @family.id %>
  <%= fam.label :importance_level, "How important is this on a scale of 1-5:  " %>
  <%= fam.text_field :importance_level %></br>
  <%end%>
  <%= f.submit %>
<%end%>
</div>

</div>
