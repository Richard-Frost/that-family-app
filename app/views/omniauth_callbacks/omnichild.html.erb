<div class="new-account">
	<h3> Add a child </h3>
  <div class="container-fluid">
	  <div class="container-fluid">
		  <%= form_for(@child) do |f| %>
			  <%= f.label :first_name %>
			  <%= f.text_field :first_name, class: "form-control" %>
			  <%= f.label :last_name %>
			  <%= f.text_field :last_name ,class: "form-control" %>
			  <%= f.label :gender %>
			  <%= f.text_field :gender, class: "form-control" %>
			  <%= f.label :age%>
			  <br>
			  <%= f.date_select :age, {
              order: [:month, :day, :year],
              date_separator: "/",
              prompt: {
                  month: 'mm',
                  day: 'dd',
                  year: 'yyyy',
              },
			  :start_year=>1900,:end_year=>2020} %>
			  <br>
			  <br>
			  <%= f.submit "Add Child" %>
		  <%end%>
	  </div>
	</div>
</div>