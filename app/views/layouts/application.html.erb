<!DOCTYPE html>
<html>
  <head>
    <title>That Family App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <!---bootstrap navbar -->
  <% if logged_in? %>
  <nav class="navbar sticky-top navbar-light bg-light">
  <a class="navbar-brand"%>That Family App</a>
  <% if logged_in? %>
  <%end%>

</nav>
 
  <nav class="sidenav">
  <div class="side-top">
  <div class="nb"> <%= image_tag("family.png") %> </div>
  <div class="small cntr"> <%= current_user.family.family_title %> </div> 

  <div class="">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item active">
        <a class="nav-link" href="/home">Home  <span class="sr-only">(current)</span></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/playdates">Playdate</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/requests">Requests</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/families">Families</a>
      </li>
       <li class="nav-item">
        <a class="nav-link" href="/families/<%=current_user.family.id%>">My Family</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/settings">Settings</a>
      </li>
      <li class="nav-item">
        <%= form_tag ({controller: 'sessions', action: 'destroy', method: 'post'}) do %>
          <input type=submit value='Logout' class="btn btn-link" )>
        <%end%>
      </li>

      
    </ul>
  </div>
  </div>
<% end %>
</nav>

<!-- bootstrap navbar end --> 
<div class="main">
    <%= yield %>
</div>



  </body>
</html>